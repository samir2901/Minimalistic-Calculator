<?xml version='1.0' encoding='utf-8'?>
<widget id="com.thunder.minimcalc" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Minimalistic Calculator</name>
    <description>
        A Minimalistic Calculator.
    </description>
    <author email="samirtd2000@gmail.com" href="https://samir2901.github.io">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <access origin="*" />

    <platform name="ios">
        <icon src="res/icon/ios/icon-1024.png" width="1024" height="1024"/>
        <icon src="res/icon/ios/icon-small.png" width="29" height="29"/>
